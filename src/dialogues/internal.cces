# This file contains events that perform some internal function for CCED

# This event tracks how long certain party members were outside of your party
== cced-member-downtime-battle-over-monitor ==
repeat: REPEAT
if !party.has.Apollo
    set cced.apollo.downtime + 1
endif
if !party.has.Emilie
    set cced.emilie.downtime + 1
endif
if !party.has.Glasses
    set cced.ctron.downtime + 1
endif
if !party.has.Joern
    set cced.joern.downtime + 1
endif
if !party.has.Schneider
    set cced.lukas.downtime + 1
endif
if !party.has.Luke
    set cced.luke.downtime + 1
endif
if !party.has.Shizuka
    set cced.shizuka.downtime + 1
endif

# These events reset downtime to 0 upon party member leave
== cced-apollo-downtime-reset ==
repeat: REPEAT
type: PARTY_MEMBER_EVENT
type.actionType: PARTY_LEAVE
type.member: Apollo
Message 1
set cced.apollo.downtime 0

